@using TravelDbProject.Models.Classes
@model List<Blog>
<div class="padding1">
    <h4>My Best Places</h4>
    <div class="box-left">
        @foreach (var x in Model)
        {
            <div class="bot-img">
                <a href="/Blog/BlogDetails/@x.ID"><img src="@x.BlogImage" alt="" /></a>
            </div>
            <div class="bot-desc">
                <p>@x.BlogDescription.Substring(0, 95)... </p>
            </div>
            <div class="clear"></div>
        }
    </div>
    
</div>
