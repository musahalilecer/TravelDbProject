@model TravelDbProject.Models.Classes.Blog
@{
    ViewBag.Title = "BlogBring";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Update</h2>
<br />
@using (Html.BeginForm("BlogUpdate", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.BlogTittle)
    @Html.TextBoxFor(x => x.BlogTittle, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogDate)
    @Html.TextBoxFor(x => x.BlogDate, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogDescription)
    @Html.TextAreaFor(x => x.BlogDescription, 15, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Blog Güncelle</button>

}

