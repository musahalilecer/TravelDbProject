@model TravelDbProject.Models.Classes.Blog
@{
    ViewBag.Title = "NewBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>NewBlog</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.BlogTittle)
    @Html.TextBoxFor(x => x.BlogTittle, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogDate)
    @Html.TextBoxFor(x => x.BlogDate, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogDescription)
    @Html.TextAreaFor(x => x.BlogDescription, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Blog Kaydet</button>

</form>

